# ==========================================
# CONFIGURATION SERVEUR
# ==========================================
PORT=8080
APP_NAME="TFT Tournament"
FRONTEND_URL=http://localhost:5173

# ==========================================
# BASE DE DONNÉES (PostgreSQL)
# ==========================================
DATABASE_URL=jdbc:postgresql://localhost:5432/tft_tournament_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password

# ==========================================
# SÉCURITÉ JWT
# ⚠️ Générer un secret fort en prod : openssl rand -base64 64
# ==========================================
JWT_SECRET=<your-64-chars-secret-here>
JWT_ISSUER=tft-tournament-api
JWT_AUDIENCE=tft-tournament-app

# ==========================================
# COOKIES (Auth)
# En prod (HTTPS) : COOKIE_SECURE=true, COOKIE_SAME_SITE=Strict
# ==========================================
COOKIE_SECURE=false
COOKIE_DOMAIN=
COOKIE_SAME_SITE=Lax

# ==========================================
# OAUTH2 (Google)
# ==========================================
GOOGLE_CLIENT_ID=votre-client-id-google
GOOGLE_CLIENT_SECRET=votre-client-secret-google

# ==========================================
# EMAILS (SMTP)
# Pour dev local avec Mailpit : host=localhost, port=1025
# ==========================================
MAIL_ENABLED=true
MAIL_FROM=noreply@tft-tournament.com
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
